###############################################################################
# Definitions
###############################################################################

include Config

SUMMARY    = Guest agent for QEMU

VER        = 10.1.0
THISAPP    = qemu-ga-$(VER)
TARGET     = $(DIR_INFO)/$(THISAPP)
PROG       = qemu-ga
PAK_VER    = 12

DEPS       =

SERVICES   = qemu-ga

###############################################################################
# Top-level Rules
###############################################################################

install : $(TARGET)

download :

b2 :

dist:
	@$(PAK)

###############################################################################
# Installation Details
###############################################################################

$(TARGET) :
	@$(PREBUILD)

	#install initscripts
	$(call INSTALL_INITSCRIPTS,$(SERVICES))

	@rm -rf $(DIR_APP)
	@$(POSTBUILD)
